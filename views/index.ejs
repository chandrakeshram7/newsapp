<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News Page</title>
</head>
<body>
    <h1><%= name %></h1>
    <h1>Top Headlines in India</h1>
    <ul>
        <% newsData.forEach(article => { %>
            <li>
                <h3><%= article.title %></h3>
                <p><%= article.description %></p>
                <!-- Add more fields as needed -->
            </li>
        <% }); %>
    </ul>
</body>
</html>
